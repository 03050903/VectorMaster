<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context="com.sdsmdg.harjot.vectormasterdemo.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/vector_master"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:rotation="90"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:vector_src="@drawable/ic_cloud_lightning" />

        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/vector_master_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:rotation="90"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:vector_src="@drawable/clip_vector" />

        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/vector_master_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:rotation="90"
            app:vector_src="@drawable/search_back_vector" />

        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/vector_master_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:rotation="90"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:vector_src="@drawable/ic_cloud_rain" />
    </LinearLayout>

    <com.sdsmdg.harjot.vectormaster.VectorMasterView
        android:id="@+id/vector_master_100"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:vector_src="@drawable/ic_cloud_lightning" />


    <View
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_cloud_lightning" />

</RelativeLayout>
